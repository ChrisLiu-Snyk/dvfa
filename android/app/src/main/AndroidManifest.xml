<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:label="dvfa"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:debuggable="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Vulnerability: Insecure IPC (Inter-Process Communication) via exported Activity -->
        <!-- An exported Activity that can be invoked by other apps and processes sensitive data without proper permissions. -->
        <activity android:name=".InsecureExportedActivity"
                  android:exported="true" />

        <!-- Vulnerability: Improper Privilege Management - Exported Broadcast Receiver without permissions -->
        <!-- An exported broadcast receiver that does not require any permissions, allowing any app to send it commands. -->
        <receiver android:name=".InsecureBroadcastReceiver"
                  android:enabled="true"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.example.dvfa.INSECURE_ACTION" />
            </intent-filter>
        </receiver>

        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- Vulnerability: SQL Injection (Android Native - Content Provider) -->
        <!-- An exported Content Provider with a SQL injection vulnerability in its query method. -->
        <provider android:name=".InsecureContentProvider"
                  android:authorities="com.example.dvfa.insecureprovider"
                  android:enabled="true"
                  android:exported="true"/>

    </application>
</manifest>
